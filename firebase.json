{
  "hosting": {
    "predeploy": "npm run build",
    "trailingSlash": false,
    "redirects": [
      {
        "source": "/",
        "destination": "/en",
        "type": 301
      }
    ],
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "src/**", "tests/**", "lib/**", "gulpfile.js", "rollup.*.js", "babel.config.js", "package*.json"]
  }
}
